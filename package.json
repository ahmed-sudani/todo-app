{
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"yarn tw:watch\" \"vite\"",
    "build": "yarn tw:build && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:dev": "vitest --allowOnly",
    "test:unit": "vitest run ./src/features/**/hooks/ ./src/features/**/util/ ./src/hooks/ ./src/util/",
    "test:components": "vitest run ./src/features/ ./src/**/components/**",
    "prettier:write": "prettier -u -w --ignore-path .gitignore \"*.{ts,tsx,css,html}\"",
    "lint:check": "eslint --fix --ext .ts,tsx --ignore-path .gitignore .",
    "ts:check": "tsc --noEmit",
    "tw:watch": "npx tailwindcss -i src/styles/tailwind.css -c tailwind.config.js -o src/styles/index.css --watch",
    "tw:build": "NODE_ENV=production npx tailwindcss -i src/styles/tailwind.css -c tailwind.config.js -o src/styles/index.css --minify",
    "prepare": "husky install"
  },
  "dependencies": {
    "@preact/signals": "^1.2.1",
    "@types/cypress": "^1.1.3",
    "clsx": "^2.0.0",
    "preact": "^10.13.1",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.3",
    "@babel/preset-react": "^7.23.3",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@preact/preset-vite": "^2.5.0",
    "@testing-library/preact": "^3.2.3",
    "@typescript-eslint/parser": "^6.10.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "eslint": "^8.53.0",
    "eslint-config-preact": "^1.3.0",
    "eslint-config-prettier": "^9.0.0",
    "happy-dom": "^12.10.3",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.1.0",
    "postcss": "^8.4.31",
    "prettier": "^3.0.3",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "vite": "^4.3.2",
    "vite-plugin-eslint": "^1.8.1",
    "vitest": "^0.34.6",
    "vitest-dom": "^0.1.1"
  }
}
